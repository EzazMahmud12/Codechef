#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {


		e4;

		test_case{

		ll i,n,x,k;

		cin>>n>>x>>k;

		string s;

		cin>>s;
		ll c=0,ans=0;

		for(i=0; i<n; i++){
			if(s[i]=='1'){
				c++;
			}
			else{
				ans+=c;
			}
		}

		if(ans<=x && ans%k==0) cout<<1<<endl;
		else cout<<2<<endl;

	}
}

	
		    //            S m o t h e r e d  M a t e !!		 //	
